{% extends '@Corinne/layout.html.twig' %}

{% block header %}{% endblock header %}

{% block body %}

    <div class="" id="access-body">
        <header>
            <nav>
                <div class="col s12">
                    <div class="navac-wrapper black">
                        <a href="#" class="brandac-logo amber-text">Gestion des oeuvres : Authentification</a>
                    </div>
                </div>
            </nav>
        </header>

        {% if error %}
            <div class="center errorlog"><P class="amber-text"><input type="hidden" value="{{ error|trim('.')|trans({}, 'FOSUserBundle') }}">Identifiant ou Mot de passe incorrecte</P></div>
        {% endif %}

        <main role="main" id="access-main" class="">

            <div id="access-form" class="">
                <div class="container">
                    <div class="row">
                        <form class="col s12" method="post" action="{{ path("fos_user_security_check") }}">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="row">
                                <div class="input-field col s12 offset-m3 m6">
                                    <i class="material-icons prefix black-text">account_circle</i>
                                    <label for="icon_prefix" class="amber-text"><input type="hidden" value="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">Identification</label>
                                    <input id="icon_prefix" type="text" class="validate amber-text black" name="_username" value="{{ last_username }}"  autofocus required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12 offset-m3 m6">
                                    <i class="material-icons prefix black-text">verified_user</i>
                                    <label for="icon_verified_user" class="amber-text"><input type="hidden" value="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}">Mot de passe</label>
                                    <input id="icon_verified_user" type="password" class="validate amber-text" name="_password" value="" required="required">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col offset-l5 l4">
                                    <input type="checkbox" id="test6" name="_remember_me">
                                    <label for="test6" class="amber-text"><input type="hidden" value="{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}">Se souvenir de moi</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12 offset-m3 m2">
                                    <button class="waves-effect waves-light btn amber black-text" type="reset" name="reset_action">Annuler</button>
                                </div>
                                <div class="col s12 offset-m2 m2">
                                    <button class="waves-effect waves-light btn amber black-text" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}">Valider
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </main>

    </div>

{% endblock body %}

{% block footer %}{% endblock footer %}