{% extends '@Corinne/admin/index.html.twig' %}

{% block body %}

    <div class="container">

        <div class="card-title teal center">
            <h1 class="white-text">Ajouter un évènement</h1>
        </div>

        {{ form_start(form) }}
        <div class="row">
            <div class="input-field col s12">
                {{ form_label(form.titre, "Titre de l'evenement") }}
                {{ form_widget(form.titre) }}
                {{ form_errors(form.titre) }}
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{ form_label(form.descriptif, "Description de l'evenement") }}
                {{ form_widget(form.descriptif, {'attr': {'class': 'materialize-textarea'}}) }}
                {{ form_errors(form.descriptif) }}
            </div>
        </div>

        <div class="row">
            <div class="col s4 offset-s1">
                <div class="row">
                    {{ form_label(form.dateDebut, "Date de début") }}
                </div>
                <div class="row">
                    <div class="col s4">
                        {{ form_widget(form.dateDebut.day) }}
                    </div>
                    <div class="col s4">
                        {{ form_widget(form.dateDebut.month) }}
                    </div>
                    <div class="col s4">
                        {{ form_widget(form.dateDebut.year) }}
                    </div>
                </div>
                {{ form_errors(form.dateDebut) }}
            </div>

            <div class="col s4 offset-s2">
                <div class="row">
                    {{ form_label(form.dateFin, "Date de fin") }}
                </div>
                <div class="row">
                    <div class="col s4">
                        {{ form_widget(form.dateFin.day) }}
                    </div>
                    <div class="col s4">
                        {{ form_widget(form.dateFin.month) }}
                    </div>
                    <div class="col s4">
                        {{ form_widget(form.dateFin.year) }}
                    </div>
                </div>
                {{ form_errors(form.dateFin) }}
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <div class="input-field">
                    {{ form_label(form.lieu, "Lieu de l'evenement") }}
                    {{ form_widget(form.lieu) }}
                    {{ form_errors(form.lieu) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12 m6 l6">
                {{ form_label(form.alt, "Nom de l'image") }}
                {{ form_widget(form.alt) }}
                {{ form_errors(form.alt) }}
            </div>

            <div class="col s12 m6 l6">
                {{ form_label(form.file, "choisir une image") }}
                <div class="valign-wrapper">
                    <div class="valign">
                        {{ form_widget(form.file) }}
                    </div>
                </div>
                {{ form_errors(form.file) }}
            </div>
        </div>

        <div class="center">
            <input class="waves-effect waves-light btn-large teal" type="submit" value="Valider" />
            <a href="{{ path('event_index') }}" class="waves-effect waves-light btn-large teal">Retour </a>
        </div>

        <div class=""> {{ form_rest(form) }} </div>

        {{ form_end(form) }}

    </div>

{% endblock %}

